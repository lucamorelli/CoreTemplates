{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "wwwroot/app",
    "rootDir": "app/",
    "inlineSourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": [ "es2015", "dom" ],
    "baseUrl": "./node_modules",
    "paths": {
      "aurelia-open-id-connect": [ "aurelia-open-id-connect/dist/tsc_out/index" ],
      "oidc-client": [ "oidc-client/oidc-client" ]
    }
    
  },
  "exclude": [
    "node_modules",
    "wwwroot/jspm_packages"
  ]
}