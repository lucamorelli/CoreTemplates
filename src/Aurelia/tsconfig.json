{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "app/",
    "outDir": "wwwroot/app",
    "inlineSourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": [ "es2015", "dom" ]
  },
  "exclude": [
    "node_modules",
    "wwwroot/jspm_packages"
  ]
}